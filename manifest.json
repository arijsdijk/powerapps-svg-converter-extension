{
  "manifest_version": 3,
  "name": "PowerApps SVG Converter",
  "version": "1.0.0",
  "description": "A browser extension to convert SVG files for use in PowerApps Canvas Apps",
  "permissions": ["activeTab", "clipboardWrite"],
  "web_accessible_resources": [{
    "resources": ["src/output.css"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon128.png"
  }
}